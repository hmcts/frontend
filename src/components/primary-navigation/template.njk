<nav class="hmcts-primary-navigation{% if params.classes %} {{ params.classes }}{% endif %}"{% if (params.label) %} aria-label="{{ params.label }}"{% endif %}>
  <div class="hmcts-primary-navigation__container{% if params.containerClasses %} {{ params.containerClasses }}{% endif %}">
    <ul class="hmcts-primary-navigation__list">
      {% for item in params.items %}
        <li class="hmcts-primary-navigation__item">
          <a class="hmcts-primary-navigation__link" {{ 'aria-current="page"' | safe if item.active }} href="{{ item.href }}">{{ item.text }}</a>
        </li>
      {% endfor %}
    </ul>
  </div>
</nav>